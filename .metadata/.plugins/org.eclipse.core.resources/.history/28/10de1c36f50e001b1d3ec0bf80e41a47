import java.util.Scanner;

public class Ejercicio5 {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

		System.out.println("¿Cual es el nombre del artículo?");
		String articulo = entrada.nextLine();

		System.out.println("¿Cual es el precio del artículo?");
		int precio = entrada.nextInt();

		System.out.println("¿Que descuento tiene? (Solo el número)");
		int num1 = entrada.nextInt();

		int num2 = precio * num1 / 100;
		int descuento = precio - num2;

		System.out.println(articulo + " tiene un precio de " + precio + ", con un descuento" + " de " + num1
				+ ". Su precio final es de " + descuento);
	}

}